{
  "name": "eslint-config-env",
  "version": "1.2.0",
  "description": "ESLint config optimized for authoring packages that adapts to the project environment.",
  "license": "MIT",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "https://jaydenseric.com"
  },
  "repository": "github:jaydenseric/eslint-config-env",
  "homepage": "https://github.com/jaydenseric/eslint-config-env#readme",
  "bugs": "https://github.com/jaydenseric/eslint-config-env/issues",
  "keywords": [
    "eslint",
    "config",
    "env",
    "node",
    "babel",
    "prettier",
    "react",
    "next",
    "esm",
    "mjs"
  ],
  "files": [
    "index.js"
  ],
  "engines": {
    "node": ">=6"
  },
  "peerDependencies": {
    "eslint": "^5.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.0"
  },
  "dependencies": {
    "app-root-path": "^2.1.0",
    "read-pkg-up": "^4.0.0",
    "semver": "^5.6.0"
  },
  "devDependencies": {
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3"
  },
  "scripts": {
    "test": "npm run test:eslint && npm run test:prettier",
    "test:eslint": "eslint .",
    "test:prettier": "prettier '**/*.{json,yml,md}' -l",
    "prepublishOnly": "npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,yml,md}": "prettier -l"
  },
  "eslintConfig": {
    "extends": [
      "./index.js"
    ]
  },
  "prettier": {
    "proseWrap": "never",
    "singleQuote": true,
    "semi": false
  }
}
